alias grep="egrep --color"
alias egrep="egrep --color"
alias fgrep="fgrep --color"

alias ls="ls --color"
alias ll="ls -lph"
alias lla="ll -A"
alias less="less -R"
alias cdiff="colordiff | less"

alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"

alias what_is_my_ip="curl -sS -m1 --fail http://checkip.amazonaws.com/"